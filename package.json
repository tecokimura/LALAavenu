{
    "scripts": {
        "pre": "prettier --write src/**/*.ts",
        "jest": "jest",
        "test": "run-s test:*",
        "test:prettier": "run-s pre",
        "test:jest": "run-s jest",
        "dev": "run-s dev:*",
        "dev:test": "run-s test:*",
        "dev:run": "parcel src/index.html --no-cache",
        "ver": "run-s ver:*",
        "ver:prettier": "prettier --version",
        "ver:jest": "jest --version",
        "ver:parcel": "parcel --version"
    },
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.20.11",
        "@babel/preset-env": "^7.20.2",
        "@parcel/config-default": "^2.8.2",
        "@parcel/resolver-glob": "^2.8.3",
        "@parcel/transformer-typescript-tsc": "^2.8.2",
        "@parcel/validator-typescript": "^2.8.3",
        "@types/jest": "^29.2.5",
        "@types/p5": "^1.4.3",
        "babel-jest": "^29.4.1",
        "jest": "^29.3.1",
        "npm-run-all": "^4.1.5",
        "p5": "^1.5.0",
        "prettier": "^2.8.3",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "parcel": "^2.8.3"
    },
    "jest": {
        "verbose": true,
        "transform": {
            "\\.tsx?$": "ts-jest"
        },
        "moduleNameMapper": {
            "^scripts/(.+)$": "<rootDir>/src/scripts/$1"
        }
    }
}
